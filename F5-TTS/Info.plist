<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDocumentTypes</key>
    <array>
        <!-- Plain Text Document Type -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>Plain Text</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.plain-text</string>
            </array>
        </dict>
        <!-- Audio File Document Type -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>Audio File</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.audio</string>
                <string>public.wav</string>
            </array>
        </dict>
    </array>

    <key>NSSpeechRecognitionUsageDescription</key>
    <string>We need access to speech recognition to convert your voice input to text.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>We need access to your microphone to capture voice input.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>fetch</string>
        <string>processing</string>
        <string>push-to-talk</string>
        <string>remote-notification</string>
        <string>voip</string>
    </array>

